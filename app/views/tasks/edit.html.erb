<h1><%= t("edit_task_page") %></h1>
<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this <%= @task.title %> from being saved:</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @task, local: true) do |f| %>
  <%= f.label t("activerecord.errors.attributes.task.title") %><br>
  <%= f.text_field :title %><br>
  <%= f.label t("activerecord.errors.attributes.task.content") %><br>
  <%= f.text_area :content %><br>
  <%= f.submit t("update_task"), id: "update-task"  %><br>
<% end %>

<%= link_to t("back"), tasks_path, id: "back"  %>